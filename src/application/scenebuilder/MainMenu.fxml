<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.scenebuilder.MainMenuController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-image: url(&quot;resources/background.jpg&quot;);">
         <children>
            <Button fx:id="_deleteButton" layoutX="229.0" layoutY="494.0" mnemonicParsing="false" onAction="#handleDeleteVideo" prefHeight="78.0" prefWidth="185.0" style="-fx-background-color: f10101;" text="DELETE">
               <font>
                  <Font name="System Bold Italic" size="33.0" />
               </font></Button>
            <Button fx:id="_createButton" layoutX="414.0" layoutY="493.0" mnemonicParsing="false" onAction="#handleCreate" prefHeight="78.0" prefWidth="154.0" style="-fx-background-color: lightblue;" text="NEW">
               <font>
                  <Font name="System Bold Italic" size="36.0" />
               </font></Button>
            <HBox fx:id="_hbox" layoutX="31.0" layoutY="174.0" spacing="30.0">
               <children>
                  <ScrollPane prefHeight="310.0" prefWidth="334.0">
                     <content>
                        <ListView fx:id="videoListView" onMouseClicked="#handleSelectionChange" prefHeight="308.0" prefWidth="332.0" style="-fx-border-color: blue; -fx-background-color: beige;" />
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <Button fx:id="_quizButton" layoutX="568.0" layoutY="479.0" mnemonicParsing="false" onAction="#handleQuiz" prefHeight="109.0" prefWidth="211.0" style="-fx-background-color: lightgreen;" text="LEARN">
               <font>
                  <Font name="System Bold Italic" size="41.0" />
               </font></Button>
            <Button fx:id="_modifyButton" layoutX="31.0" layoutY="493.0" mnemonicParsing="false" onAction="#testSerial" prefHeight="78.0" prefWidth="198.0" style="-fx-background-color: orange;" text="MODIFY">
               <font>
                  <Font name="System Bold Italic" size="33.0" />
               </font></Button>
            <ToggleButton fx:id="_lockButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleLockScreen" style="-fx-background-color: yellow;" text="Lock">
               <font>
                  <Font size="7.0" />
               </font></ToggleButton>
            <Label layoutX="32.0" layoutY="119.0" text="My Creations" textFill="#fffefe">
               <font>
                  <Font name="System Bold Italic" size="45.0" />
               </font>
            </Label>
            <Label layoutX="414.0" layoutY="119.0" text="Now Playing:" textFill="#fffefe">
               <font>
                  <Font name="System Bold Italic" size="45.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
   
</AnchorPane>
